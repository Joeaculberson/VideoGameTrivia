<h1>Pending Questions</h1>

<% if @questions.size > 0 %>
    <div class="panel panel-default">
      <table class="table table-striped table-hover">
        <thead>
        <th>
          Question
        </th>
        <th>
          Submitter
        </th>
        </thead>

        <tbody>
        <% @questions.each do |question| %>
            <tr class="info" onclick="location.href='<%= question_path(question) %>'">
              <td><%= question.question_text %></td>
              <td><%= question.submitter %></td>
              <td>
                  <div id="face-wrapper">
                      <% user = User.find_by(email: question.submitter) %>
                      <% if user.image %>
                          <img src='<%= user.image %>' class="img-circle face">
                      <% else %>
                          <img src='<%= image_url('default_profile.png')%>' class="img-circle face">
                      <% end %>
                  </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
<% end %>