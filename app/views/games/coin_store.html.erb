<div class="container border-form-div">
    <div class="text-center">
      <h3>Welcome to the Coin Store</h3>
      <h4>Select an amount to purchase</h4>
      <br/>
      <img src='<%= image_url('coins/coin_store.png')%>' width="60%">
    </div>
    <br/>
    <div class="row text-center">
      <div class="col-md-4">
        <img src='<%= image_url('coins/one_dollar.png')%>' width="50" height="50">
        <br/>
        <%= button_to '$1 for 5 coins', '#', :class => 'btn btn-warning' %>
      </div>
      <div class="col-md-4">
        <img src='<%= image_url('coins/five_dollars.png')%>' width="50" height="50">
        <br/>
        <%= button_to '$5 for 30 coins', '#', :class => 'btn btn-warning' %>
        <br/>
        (5 coins free!)
      </div>
      <div class="col-md-4">
        <img src='<%= image_url('coins/ten_dollars.png')%>' width="50" height="50">
        <br/>
        <%= button_to '$10 for 75 coins', '#', :class => 'btn btn-warning' %>
        <br/>
        (15 coins free!)
      </div>
    </div>
</div>